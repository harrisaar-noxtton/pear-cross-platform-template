{
  "name": "pear-cross-platform-template",
  "main": "dist-web/index.html",
  "version": "1.0.0",
  "scripts": {
    "build-pear-end": "npx bare-pack --target ios --target android --linked --out components/app.bundle.mjs backend/backend.mjs",
    "set-main-expo": "node scripts/change-package-main-value.js 'expo-router/entry'",
    "set-main-pear": "node scripts/change-package-main-value.js 'dist-web/index.html'",
    "fix-paths": "node scripts/fix-expo-build-paths.js",
    "build:web": "npm run set-main-expo && expo export --platform web --output-dir dist-web && npm run fix-paths && npm run set-main-pear",
    "desktop": "npm run build-pear-end && npm run build:web && npm run set-main-pear && pear run --dev .",
    "android": "npm run build-pear-end && npm run set-main-expo && expo run:android",
    "web": "npm run set-main-expo && expo start --web"
  },
  "pear": {
    "name": "pearcrossplatformtemplate",
    "gui": {
      "width": 1200,
      "height": 800,
      "center": true,
      "resizable": true,
      "backgroundColor": "#ffffff"
    },
    "stage": {
      "entrypoints": [
        "dist-web/index.html"
      ],
      "ignore": [
        "./node_modules",
        "./android",
        ".git"
      ],
      "prefetch": [
        "dist-web/**/*"
      ]
    },
    "links": [
      "https://*"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-navigation/native": "^7.1.8",
    "b4a": "^1.7.3",
    "bare-rpc": "^0.2.12",
    "expo": "^54.0.10",
    "expo-constants": "~18.0.9",
    "expo-file-system": "~19.0.16",
    "expo-font": "~14.0.8",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.8",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-web-browser": "~15.0.7",
    "hrpc": "^4.2.0",
    "hypercore": "^11.16.2",
    "hyperswarm": "^4.14.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-bare-kit": "^0.9.3",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@types/b4a": "^1.6.5",
    "@types/react": "~19.1.0",
    "@types/react-dom": "~19.1.0",
    "@types/react-native": "^0.73.0",
    "bare-pack": "^1.4.6",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.1"
  },
  "private": true
}